@model IEnumerable<StaffManagementMicroservice.DTOS.StaffPermissions>

@{
    ViewData["Title"] = "Add Permissions";
}
<h1>Add Permissions</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Permissions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Permissions)
            </td>
            <td>
                <a asp-action="Add" asp-route-StaffID="@item.StaffID" asp-route-Permissions="@item.Permissions" >Add</a>
            </td>
        </tr>
}
    </tbody>
</table>
